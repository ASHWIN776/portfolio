---
import ResourceLink from "./ResourceLink.astro";
import Tag from "./Tag.astro";

const { project } = Astro.props;
---

<div class="flex flex-col gap-y-3">
  <div class="flex justify-between items-center">
    <div class="flex flex-col gap-y-1">
      <h2 class="text-xl">
        <a href={project.link} class="link">{project.name}</a>
      </h2>
      <p class="text-gray-400 text-xs">{project.date}</p>
    </div>
    {
      // FIXME: Remove the any type
      project.additionalLinks.map((link: { url: string, icon: any }) => (
        <ResourceLink link={link.url}>
          <link.icon />
        </ResourceLink>
      ))
    }
  </div>

  <div class="flex flex-wrap gap-x-2">
    {project.skills.map((skill: string) => (
      <Tag name={skill} />
    ))}
  </div>

  <div class="flex flex-col gap-y-2">
    <p>{project.oneLiner}</p>
    <p class="text-sm">{project.description}</p>
    <div>
      <img src={project.image} alt={project.name} class="rounded-lg shadow-lg" />
    </div>
  </div>
</div>
