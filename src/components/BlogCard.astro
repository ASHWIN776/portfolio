---
import { getFormattedDate } from "../utils/helpers.ts"

const { blog } = Astro.props
---

<div class="flex flex-col gap-y-3">
  <div class="flex flex-col gap-y-1">
    <h2 class="text-xl">
      <a href={blog.link} class="link">{blog.title}</a>
    </h2>
    
    <p class="text-gray-400 text-xs">{getFormattedDate(blog.pubDate)}</p>
  </div>

  <p class="text-sm text-gray-300">{blog.oneLiner}</p>
</div>